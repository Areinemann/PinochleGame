<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
android:background="#663300"
    android:id="@+id/PinochleLayout"
    android:orientation="vertical">

    //div: Player 2 Layout
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_weight="1"
    android:id="@+id/Player2Layout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/OpponentCard"
        android:layout_weight="1"
        android:src="@drawable/cardback1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/OpponentCard2"
        android:layout_weight="1"
        android:src="@drawable/cardback1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/OpponentCard3"
        android:layout_weight="1"
        android:src="@drawable/cardback1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/OpponentCard4"
        android:layout_weight="1"
        android:src="@drawable/cardback1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/OpponentCard5"
        android:layout_weight="1"
        android:src="@drawable/cardback1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/OpponentCard6"
        android:layout_weight="1"
        android:src="@drawable/cardback1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/OpponentCard7"
        android:layout_weight="1"
        android:src="@drawable/cardback1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/OpponentCard8"
        android:layout_weight="1"
        android:src="@drawable/cardback1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/OpponentCard9"
        android:layout_weight="1"
        android:src="@drawable/cardback1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/OpponentCard10"
        android:layout_weight="1"
        android:src="@drawable/cardback1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/OpponentCard11"
        android:layout_weight="1"
        android:src="@drawable/cardback1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/OpponentCard12"
        android:layout_weight="1"
        android:src="@drawable/cardback1" />

</LinearLayout>

    //div: Cards in Play Layout (Center Deck)

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:id="@+id/CardsInPlayLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/Deck"
        android:layout_weight="4"
        android:src="@drawable/cardback1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/Player1Card"
        android:layout_weight="2"
        android:src="@drawable/kingdiamonds2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/Player2Card"
        android:layout_weight="2"
        android:src="@drawable/acehearts2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/TrumpSuitCard"
        android:layout_weight="4"
        android:src="@drawable/jackspades2" />
</LinearLayout>

    //div: Player 1 Layout

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:id="@+id/Player1Layout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PlayerCard"
        android:layout_weight="1"
        android:src="@drawable/acediamonds2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PlayerCard2"
        android:layout_weight="1"
        android:src="@drawable/tenspades2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PlayerCard3"
        android:layout_weight="1"
        android:src="@drawable/queenhearts2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PlayerCard4"
        android:layout_weight="1"
        android:src="@drawable/tendiamonds2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PlayerCard5"
        android:layout_weight="1"
        android:src="@drawable/jackspades2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PlayerCard6"
        android:layout_weight="1"
        android:src="@drawable/tenhearts2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PlayerCard7"
        android:layout_weight="1"
        android:src="@drawable/kingspades2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PlayerCard8"
        android:layout_weight="1"
        android:src="@drawable/ninespades2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PlayerCard9"
        android:layout_weight="1"
        android:src="@drawable/queenspades2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PlayerCard10"
        android:layout_weight="1"
        android:src="@drawable/acespades2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PlayerCard11"
        android:layout_weight="1"
        android:src="@drawable/queenclubs2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PlayerCard12"
        android:layout_weight="1"
        android:src="@drawable/jackclubs2" />

</LinearLayout>

    //div: Help Bar Layout
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:id="@+id/HelpBar">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Melds"
        android:id="@+id/ShowMelds"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ? "
        android:id="@+id/Help" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit/Reset"
        android:id="@+id/TurnChange"
        android:layout_gravity="right"
        android:layout_weight="0" />

</LinearLayout>

</LinearLayout>

